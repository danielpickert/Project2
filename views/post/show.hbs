{{!-- {{#if comments.length}} --}}
  {{!-- {{#each comments}} --}}
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          {{ content }}
        </span>
      </div>
      <div class="card-action">
        <a href="/user/{{ author.id }}" class="">{{ author.local.email }}</a>
        <span class="post__date">{{ createdAt }}</span>
      </div>
    </div>
  {{!-- {{/each}} --}}
{{!-- {{/if}} --}}
<div class="card">
  <div class="card-content">
    <form method="POST" action="/post/{{id}}/comments">
      Add a comment: <input type="text" name="content">
      <input type="submit" value="Submit" class="btn">
    </form>

<div class="comments">
    {{#each comments}}   
      <p>{{this}}</p>
    {{/each}}
</div>
{{log this}}
  </div>
</div>
