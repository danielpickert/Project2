<section class="form-container">
  <h4 id="newpost">New Post</h4>
  <form action="/post" method="POST" class="post-form">
    <p class="input-field">
      <textarea name="content" cols="70" rows="3" placeholder="Message"></textarea>
    </p>
    <p class="input-field">
      <input type="submit" value="Post" class="btn">
    </p>
  </form>
</section>

{{#each posts}}
  <div class="posts">
  <p>{{content}} 
<!--     <br><br> {{author.local.email}} --></p>
  </div>
{{/each}}
